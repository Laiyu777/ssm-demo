<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Dao.LoginLogDao">

    <resultMap id="loginlogMap" type="Entity.LoginLog">
        <result column="username" property="username"></result>
        <result column="login_time" property="loginTime"></result>
        <result column="ip_address" property="ipAddress"></result>
        <result column="result" property="result"></result>
    </resultMap>

    <insert id="insertOneRecord" parameterType="Entity.LoginLog">
        insert into loginlog(username,login_time,ip_address,result) VALUES (#{username},#{loginTime},#{ipAddress},#{result})
    </insert>

    <select id="getLoginLogsByUsername" resultMap="loginlogMap">
        select username,login_time,ip_address,result from loginlog where username = #{username} ORDER By login_time DESC
    </select>
</mapper>